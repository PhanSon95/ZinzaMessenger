<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <me.himanshusoni.chatmessageview.ChatMessageView
        android:layout_marginTop="5dp"
        android:id="@+id/contentMessageChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cmv_arrowGravity="end"
        app:cmv_arrowMargin="3dp"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="@color/recipientColor"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_contentPadding="5dp"
        app:cmv_cornerRadius="3dp"
        app:cmv_showArrow="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_play_video"
            android:id="@+id/imgThumb"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/imgThumb"
            android:text="lang nghe nc mat.mp4"
            android:singleLine="true"
            android:id="@+id/tvNameFileVideo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"/>
    </me.himanshusoni.chatmessageview.ChatMessageView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_marginLeft="5dp"
        android:layout_height="30dp"
        android:id="@+id/imgReciepentVideo"
        android:src="@drawable/ic_avatar_df"
        android:layout_alignTop="@+id/contentMessageChat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:id="@+id/text_view_time_recipent"
        android:layout_below="@+id/contentMessageChat"
        android:layout_alignLeft="@+id/contentMessageChat"/>

</RelativeLayout>